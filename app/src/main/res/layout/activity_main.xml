<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:text=""
        android:textSize="40sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/result_tv"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text=""
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/button_layout"
        android:layout_margin="16dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/button_layout"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="#D8D4D4"

    tools:ignore="UselessParent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="C"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:backgroundTint="#E51C0E"
            android:id="@+id/button_c"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="36dp"
            android:text="("
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:backgroundTint="#646262"
            android:id="@+id/button_open_bracket"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text=")"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:backgroundTint="#646262"
            android:id="@+id/button_close_bracket"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="/"
            android:textColor="@color/white"
            android:backgroundTint="#FF5722"
            android:textSize="32sp"
            android:layout_margin="12dp"
            app:cornerRadius="36dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="7"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_7"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="36dp"
            android:text="8"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_8"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="9"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_9"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multiply"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="*"
            android:textColor="@color/white"
            android:backgroundTint="#FF5722"
            android:textSize="32sp"
            android:layout_margin="12dp"
            app:cornerRadius="36dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="4"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_4"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="36dp"
            android:text="5"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_5"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="6"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_6"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="+"
            android:textColor="@color/white"
            android:backgroundTint="#FF5722"
            android:textSize="32sp"
            android:layout_margin="12dp"
            app:cornerRadius="36dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="1"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_1"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="36dp"
            android:text="2"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_2"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="3"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_3"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_subs"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="-"
            android:textColor="@color/white"
            android:backgroundTint="#FF5722"
            android:textSize="32sp"
            android:layout_margin="12dp"
            app:cornerRadius="36dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="AC"
            android:textSize="21sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:backgroundTint="#E51C0E"
            android:id="@+id/button_ac"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="36dp"
            android:text="0"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_0"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:text="."
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_dot"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equal"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="="
            android:textColor="@color/white"
            android:backgroundTint="#FF5722"
            android:textSize="32sp"
            android:layout_margin="12dp"
            app:cornerRadius="36dp"
            />


    </LinearLayout>

</LinearLayout>


</RelativeLayout>